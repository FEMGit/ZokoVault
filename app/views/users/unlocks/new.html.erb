<section class="card login-card" >
  <h2>Resend unlock instructions</h2>

  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.label :email %>
    <% if resource.errors && resource.errors.messages[:email].present? %>
      <span class="error-label"> - <%= resource.errors.messages[:email].first %></span>
    <% end %>
    <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: ("input-error" if resource.errors && resource.errors.messages[:email].present?) %>
    <div class="actions">
      <%= f.button "Resend unlock instructions", class: "big-button primary-button" %>
    </div>
  <% end %>
  <br>
  <%= render "users/shared/links" %>
</section>
