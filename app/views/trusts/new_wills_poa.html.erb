<%= render :partial => "layouts/bread_crumbs" %>

<h1><%= 'Trusts - Setup' %></h1>
<div class="card trusts mb-30">
  <h3 class="card-label">Trust Details</h3>

  <label>Trust Name<span class="required">Required</span></label>
  <%= text_field_tag :title %>
  
  <label>Attorney, Accountant or Advisor(s)</label>
  <%= render partial: 'layouts/static_chosen_select', locals: {field_multiple: true, field_name: "agent", field_id: "agent"} %>

  <label>Trustee(s)</label>
  <%= render partial: 'layouts/static_chosen_select', locals: {field_multiple: true, field_name: "trustee", field_id: "trustee"} %>
  
  <label>Successor Trustee(s)</label>
  <%= render partial: 'layouts/static_chosen_select', locals: {field_multiple: true, field_name: "successor_trustee", field_id: "successor_trustee"} %>
  
  <label>Notes</label>
  <%= text_area_tag :notes %>
  
  <section class="shared-with edit-shared">
    <h3 class="card-label shared-label">
      <svg class="icon" viewBox="0 0 20 20">
        <use xlink:href="#icon-Safe"></use>
      </svg> Shared With
    </h3>
    <label>Shared With</label>
    <%= render partial: 'layouts/static_chosen_select', locals: {field_multiple: true, field_name: "shared", field_id: "shared"} %>
  </section>
</div>

<%= link_to 'Save', 'javascript:void(0);', class: "button primary-button big-button" %>
<%= link_to 'Cancel', back_path || trusts_entities_path, class: "button secondary-button big-button" %>

<script>
  $('.chosen-select').chosen({allow_single_deselect: true});
</script>

<%= render partial: 'contacts/ajax_form' %>