<div class="contact-element-title">
  <h1 class="contact-user-name">Contact Documents</h1>
  <a class="add-link fr" href="<%= new_document_path(:category => @category, :group => @contact.id) %>">
    <span class="circle-button">
      <svg class="icon circle-icon">
        <use xlink:href="#icon-plus-1"></use>
      </svg>
    </span>Add Document
  </a>
</div>

<table class="sortable">
  <tr>
    <%= render :partial => "layouts/documents_common_columns" %>
  </tr>
  <% @contact_documents && @contact_documents.each do |document| %>
    <tr>
      <td class="document-name">
        <%= render :partial => "layouts/document_links", :locals => {:document => document} %>
      </td>
       <td><%= date_format(document.updated_at) %> </td>
      <td>
        <%= render :partial => "layouts/document_tags", :locals => {:document => document} %>
      </td>
      <td>
        <%= render :partial => "layouts/share_with_contacts", :locals => {:shares => document.shares} %>
      </td>
      <td class="share-col">
        <%= link_to 'Edit', edit_document_path(document), class: "outline-button small-button" %>
      </td>
    </tr>
  <% end %>
</table>

<div class="contact-element-title">
  <h1 class="contact-user-name">Shared With Contact</h1>
</div>
<table class="sortable">
  <tr>
    <th class="sorttable_nosort">Name</th>
    <th class="sorttable_nosort">Asset Type</th>
    <th>Tags</th>
  </tr>
  <% @share_documents && @share_documents.each do |document| %>
    <tr>
      <td class="document-name-big">
        <%= render :partial => "layouts/document_links", :locals => {:document => document} %>
      </td>
      <td>
        <%= asset_type(document) %>
      </td>
      <td class="contact-tag-right">
        <%= render :partial => "layouts/document_tags", :locals => {:document => document} %>
      </td>
    </tr>
  <% end %>
</table>