<p id="notice"><%= notice %></p>

<a class="add-link fr" href="/contacts/new">
  <span class="circle-button">
    <svg class="icon circle-icon">
      <use xlink:href="#icon-plus-1"></use>
    </svg>
  </span>Add Contact
</a>


<h1>Contacts and Permissions</h1>

<table class="contact-table">
  <thead>
    <tr class="column-title">
      <th>Name</th>
      <th>Email</th>
      <th>Relationship</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr class="contact-row">
        <td class="contact-avatar-td" style="width: 23%;">
          <span class="user-circle"><%= "#{contact.initials}" %></span>
          <%= link_to "#{contact.name}", contact, class: 'text-vertical-center' %>
        </td>
        <td style="width: 38%;"><%= contact.emailaddress %></td>
        <td style="width: 38%;"><%= contact.relationship %></td>
        <td style="width: 1%;"><%= link_to 'Details', contact %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
