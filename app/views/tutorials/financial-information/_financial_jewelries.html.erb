<%- jewelries = current_user.financial_properties.select{|p| p.property_type == 'Jewelry'} %>
<%- jewelries.each do |jew| %>
  <div class="collect-fields">
    <%= hidden_field_tag :tutorial_name, @tutorial_name, class: 'saved-field' %>
    <%= hidden_field_tag 'financial_property[property_type]', "Jewelry", class: 'saved-field' %>
    <div class="input-pair tutorial-fields property-fields">
      <%= text_field_tag "financial_property[name]", jew.name, class: "saved-field form-control medium", placeholder: 'Jewelry', :maxlength => get_max_length(:default) %>
      <a data-id=<%= jew.id %> class="medium-button outline-button inline-button remove-btn">Remove</a>
    </div>
  </div>
<% end %>
