<%= form_tag search_path, method: :get do -%>
  <%= text_field_tag :q, params[:q] %>
  <%= submit_tag 'search' %>
<% end %>


<% if params[:q].present? %>
  <%= results_summary %><br />

  Results pages: <%= paginate @paginated_results %>

  <% @paginated_results.each do |resource| %>
    <p>
      <% if subcategory_view_path(resource).present? %>
        <%= link_to resource.attributes.inspect, subcategory_view_path(resource) %>
      <% elsif resource.try(:attributes) %>
        <%= link_to resource.attributes.inspect, resource %>
      <% else %>
        <%= link_to resource[:name], resource[:path] %>
      <% end %>
    </p>
  <% end %>
<% end %>
