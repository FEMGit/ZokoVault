<button class="primary-button big-button d-none" data-modal-id="remove-corporate-modal" id="remove-corporate-modal-btn"></button>

<div id="remove-corporate-modal" class="modal medium-modal">
  <a href="javascript:void(null)" class="js-modal-close modal-close">
    <svg class="icon">
      <use xlink:href="#icon-x-2"></use>
    </svg>
  </a>
  <div class="modal-header mr-20">
    <h2><%= title %></h2>
  </div>
  <div class="modal-content">
    <p class="mb-30">
      <%= description %>
      <div class="mb-30">
        <%= link_to remove_user_button_text, remove_user_path, method: :post, class: "js-modal-close button primary-button big-button" %>
        <%= link_to 'Cancel', 'javascript:void(null)', class: "js-modal-close button secondary-button big-button" %>
      </div>
    </p>
  </div>
</div>

<%= javascript_include_tag 'modal' %>
<script>
  var removeCorporateUserModalShow = function() {
    $("#remove-corporate-modal-btn").click()
  }
</script>