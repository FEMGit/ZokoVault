<%= form_for(@vendor) do |f| %>
  <% if @vendor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vendor.errors.count, "error") %> prohibited this vendor from being saved:</h2>

      <ul>
      <% @vendor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :category %>
  </div>
  <div class="field">
    <%= f.hidden_field :group %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :webaddress %><br>
    <%= f.text_field :webaddress %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :contact_id %><br>
    <div class="styled-select">
      <%= f.select :contact_id, options_for_select(Contact.all.map{|c|[c.firstname + " " + c.lastname, c.id]}) %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
