<section class="mt-60 bt-gray-light pt-20 mb-10 flex-button">

  <%= link_to 'Back', tutorial_destroy_path, method: :post, class: "big-button outline-button padded f-left" %>
  <%- if @next_page <= @tutorial.number_of_pages %>
    <%- @from_skip  = true %>
    <%= link_to "Skip", tutorial_page_path(@tutorial_name, @next_page), class: "big-button outline-button padded skip-btn" %>
  <% elsif @next_tutorial.present? && !(@next_tutorial == 'confirmation-page') %>
    <%- @from_skip = true %>
    <%= link_to 'Skip', tutorial_page_path(@next_tutorial.name.parameterize, '1'), class: 'big-button outline-button padded skip-btn' %>
  <% else %>
    <%- @from_skip = true %>
    <%= link_to "Skip", tutorials_confirmation_path, class: "big-button outline-button padded skip-btn" %>
  <% end %>
  &nbsp
  <%= link_to "Continue", tutorials_confirmation_path, class: "button big-button blue-button f-right" %>

</section>
