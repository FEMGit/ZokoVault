<!DOCTYPE html>
<html>
<head>
  <title>ZokuVault</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js"></script>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <%= render :partial => 'layouts/svgdefs' %>
  <%= render :partial => 'layouts/nav' %>

  <main>
    <header>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%=link_to( image_tag("SVG/ZokuVault.svg", :alt=>"Zoku Vault"), root_url, :class=>"logo") %>
      <% if user_signed_in? %>
        <li>
        <%= link_to('Logout', destroy_user_session_path, :method => :delete, :class=>"logout-link") %>
        </li>
      <% else %>
        <li>
        <%= link_to('Login', new_user_session_path, :class=>"login-link")  %>
        </li>
      <% end %>
      <%= search_field_tag 'search', 'Search', :class=>"header-search" %>
    </header>

    <div class="content">
      <%= yield %>
    </div>

  </main>

</body>
</html>
