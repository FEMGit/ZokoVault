<div class="card mb-30 b-radius-0 b-none box-shadow-none">
  <h3>Subscription Details</h3>
  <% if @subscription && @subscription.full? %>
    <%= render partial: 'subscription_info.html.erb',
                locals: { subscription: @subscription,
                          card: @card,
                          plan: @plan,
                          invoices: @invoices,
                          next_invoice_date: @next_invoice_date,
                          next_invoice_amount: @next_invoice_amount } %>
  <% elsif @subscription && @subscription.trial? %>
    <%= render partial: 'free_trial_subscription_info.html.erb',
                locals: { trial: @subscription } %>
  <% else %>
    <%= render partial: 'no_plan_subscription_info.html.erb' %>
  <% end %>
</div>
