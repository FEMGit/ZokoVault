<nav class="primary-nav share-with">

  <a id="close-mobile-app-menu" class="main-nav close-primary-nav">
    Close Menu
    <svg class="icon close-icon fr">
      <use xlink:href="#icon-x-2"></use>
    </svg>
  </a>

  <a class="main-nav <%= 'active' if current_page?(shared_view_dashboard_path(@shared_user)) %>"
     href=<%= shared_view_dashboard_path(@shared_user) %> >
    <svg class="icon nav-icon">
      <use xlink:href="#icon-dashboard"></use>
    </svg>Dashboard
  </a>
  <! -- Financial Information -- >
  <% if show_navigation_link?('Financial Information') %>
    <% shared_view_financial_information = 'active' if current_page?(shared_view_financial_information_path(@shared_user)) ||
    controller?('financial_account', 'financial_property', 'financial_investment') || breadcrumb?(:shared_view_financial_information_path) %>
    <%= link_to shared_view_financial_information_path(@shared_user), class: "main-nav #{shared_view_financial_information}" do %>
      <svg class="icon nav-icon">
        <use xlink:href="#icon-activity-monitor-1"></use>
      </svg>Financial Information
    <% end %>
  <% end %>
  <! -- Wills - Power of Attorney -->
  <% if show_navigation_link?('Wills - POA') %>
    <% shared_view_wills_powers_of_attorney = 'active' if current_page?(shared_view_wills_powers_of_attorney_path(@shared_user)) ||
    controller?('wills', 'power_of_attorneys') || breadcrumb?(:shared_view_wills_powers_of_attorney_path) || wills_poa? %>
    <%= link_to shared_view_wills_powers_of_attorney_path(@shared_user), class: "main-nav #{shared_view_wills_powers_of_attorney}" do %>
      <svg class="icon nav-icon">
        <use xlink:href="#icon-document-3"></use>
      </svg>Wills & Powers of Attorney
    <% end %>
  <% end %>
  <! -- Wills, Trust & Legal -->
  <% if show_navigation_link?('Wills - Trusts - Legal') %>
    <% shared_view_estate_planning = 'active' if (current_page?(shared_view_estate_planning_path(@shared_user)) ||
    controller?('wills', 'trusts', 'power_of_attorneys') || breadcrumb?(:shared_view_estate_planning_path)) && !wills_poa? %>
    <%= link_to shared_view_estate_planning_path(@shared_user), class: "main-nav #{shared_view_estate_planning}" do %>
      <svg class="icon nav-icon">
        <use xlink:href="#icon-document-3"></use>
      </svg>Wills Trusts &amp; Legal
    <% end %>
  <% end %>
  <! -- Insurance -->
  <% if show_navigation_link?('Insurance') %>
    <% shared_view_insurance = 'active' if current_page?(shared_view_insurance_path(@shared_user)) ||
      controller?('life_and_disabilities', 'healths', 'property_and_casualties') || breadcrumb?(:shared_view_insurance_path) %>
    <%= link_to shared_view_insurance_path(@shared_user), class: "main-nav #{shared_view_insurance}" do %>
      <svg class="icon nav-icon">
        <use xlink:href="#icon-umbrella-1"></use>
      </svg>Insurance
    <% end %>
  <% end %>
  <! -- Taxes -->
  <% if show_navigation_link?('Taxes') %>
    <% shared_view_taxes = 'active' if current_page?(shared_view_taxes_path(@shared_user)) || controller?('taxes') || breadcrumb?(:shared_view_taxes_path) %>
    <%= link_to shared_view_taxes_path(@shared_user), class: "main-nav #{shared_view_taxes}" do %>
      <svg class="icon nav-icon">
        <use xlink:href="#icon-book-6"></use>
      </svg>Taxes
    <% end %>
  <% end %>
  <! -- final_wishes -->
  <% if show_navigation_link?('Final Wishes') %>
    <% shared_view_final_wishes = 'active' if current_page?(shared_view_final_wishes_path(@shared_user)) || controller?('final_wishes') ||
       breadcrumb?(:shared_view_final_wishes_path)  %>
    <%= link_to shared_view_final_wishes_path(@shared_user), class: "main-nav #{shared_view_final_wishes}" do %>
      <svg class="icon nav-icon">
        <use xlink:href="#icon-bookmark-2"></use>
      </svg>Final Wishes
    <% end %>
  <% end %>
  
  <%= link_to shares_path, class: "main-nav mobile-show" do %>
    Exit Shared View
  <% end %>
</nav>