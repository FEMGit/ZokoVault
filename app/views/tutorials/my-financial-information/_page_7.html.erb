<% @financial_provider = FinancialProvider.new(user: resource_owner,
                                                  provider_type: FinancialProvider.provider_types["Account"],
                                                  category: Category.fetch(Rails.application.config.x.FinancialInformationCategory.downcase)) %>
<% credit_cards = current_user.financial_account_informations.select{|p| p.account_type == 'Credit Card'} %>
<% providers = FinancialProvider.where(id: credit_cards.try(:map, &:account_provider_id)) %>

<%= render partial: 'tutorials/add_remove_tutorial',
           locals: { form_controller: :financial_account,
                     title: 'Add Your Credit Card Providers',
                     form_for_object: @financial_provider,
                     label_tag: { name: 'provider_name', value: 'Provider Name' },
                     partial_path: { resources: providers },
                     hidden_field_tag_values: [ { name: 'financial_provider[account_0][account_type]', value: 'Credit Card'},
                                                { name: 'financial_provider[web_address]', value: ''}],
                     text_field_tag: { name: 'financial_provider[name]', placeholder: 'Provider Name' },
                     fields_class: 'account-fields'
                   } %>
