<% additional_classes, card_id = additional_card_class_and_id_by_category(taxes_empty?, 
  Rails.application.config.x.TaxCategory) %>

<div class="card mb-30 <%= additional_classes %>" id="<%= card_id %>">
  <section class="flex-boxes padding-right">
    <div class="board-name">
      <h3>
        <svg class="icon nav-icon">
          <use xlink:href="#icon-book-6"></use>
        </svg>Taxes
      </h3>
    </div>
    <div class="board-text">
      <%= tax_year_count %> years of tax history.
    </div>
    
    <div class="board-link">
      <%= link_to button_text(tax_year_count > 0), taxes_path, :class=>"outline-button small-button" %>
    </div>
  </section>
</div>