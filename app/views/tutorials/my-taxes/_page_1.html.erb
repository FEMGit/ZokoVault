           locals: { title: 'Add Your Tax Accountant',
                     description: 'Adding your accountant helps your family know who to contact for questions about your taxes.',
                     table: { table_title: 'Your Tax Accountants',
                              contacts: @tax_accountants,
                              table_id: 'tax-accountant-table' },
                     flash_message: 'You added an accoutant! Add another one of your Tax Accountants, or click Continue.' ,
