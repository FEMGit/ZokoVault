<%= render :partial => "layouts/bread_crumbs" %>

<%= link_to edit_power_of_attorney_path(@power_of_attorney), class: "edit-link mrg-top" do%>
  <span class="circle-button">
    <svg class="icon circle-icon">
      <use xlink:href="#icon-pencil-1"></use>
    </svg>
  </span>Edit Power of Attorney
<% end %>
<h1>Power of Attorney - Contact Name</h1>


<div class="card attorney mb-30">
  <% if !attorney_present?(@power_of_attorney) %>
    <label>There is no information about this Power of Attorney</label>
  <% end %>

  <% if attorney_present?(@power_of_attorney) %>
    <li class="data-pair">
      <label>
        <%= @power_of_attorney.agents && @power_of_attorney.agents.map(&:name).join(", ") %>
      </label>
      <span class="data-right">
      <% if @power_of_attorney.powers.present? %>
        <% @power_of_attorney.powers.keys.each do |agent_power| %>
          <%= agent_power %><br>
        <% end %>
      <% end %>
      </span>
    </li>
  <% end %><br>

  <% if @power_of_attorney.notes.present? %>
    <label>Notes</label>
    <p><%= @power_of_attorney.notes %></p>
  <% end %>
  <span class="clear"></span>

  <% if category_subcategory_shares(@power_of_attorney, resource_owner).present? %>
    <section class="shared-with">
      <h3 class="card-label shared-label">
        <svg class="icon" viewBox="0 0 20 20">
          <use xlink:href="#icon-Safe"></use>
        </svg> Shared With
      </h3>

      <label>Shared With</label>
      <div>
        <%= render :partial => "layouts/subcategory_share", :locals => { :shares => category_subcategory_shares(@power_of_attorney, resource_owner) } %>
      </div>
    </section>
  <% end %>
</div>

<h3>Documents</h3>
<a class="add-link fr" href="#">
  <span class="circle-button">
    <svg class="icon circle-icon">
      <use xlink:href="#icon-plus-1"></use>
    </svg>
  </span>Add Document
</a>

<%= render :partial => "layouts/standard_document_table", :locals => {:documents => []} %>