<div class="card mb-30 mt-20 max-w-1000-centered">
  <h1 class="mb-20">Add Your Insurance Broker(s)</h1>

  <div class="modal-content">
  <%= render partial: 'tutorials/contact_tutorial_table', locals: { table_title: 'Your Insurance Broker(s)', 
                                                                    contacts: @insurance_brokers, 
                                                                    table_id: 'insurance-broker-table' } %>

  <div class="flash-success-static flash add-contactable static small" style="display: none;">
    You added a contact! Add another one of your Insurance Brokers, or click Next.</div>
    <button class="button primary-button big-button" onclick="createInsuranceBrokerContact();">Add Insurance Broker</button>
  </div>

  <%= render partial: 'tutorials/buttons_section' %>
</div>

<%= render partial: 'contacts/ajax_form', style: 'display: none;' %>

<script>
  var createInsuranceBrokerContact = function() {
    window.tableIdToUpdate = '#insurance-broker-table'
    setProfessionalDropdown(['Advisor'])
    setRelationshipDropdown(['Insurance Agent / Broker'])
    displayContactFormModal();
  }
</script>
