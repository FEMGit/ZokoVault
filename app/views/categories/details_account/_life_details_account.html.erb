<% life_provider_data.each do |life_provider_data| %>
  <div>
    <h1><%= "#{life_provider_data[:card_title][:policy_type]} -  #{life_provider_data[:card_title][:policy_holder]}" %></h1>
    <div class="card <%= @group['value'] %> details insurance">
      <div class="details-wrapper">
        <div class="details-card-info details">
          <h2 class="provider-details-title">Policy Information</h2>
          <% life_provider_data.except(:card_title).each do |field_title, field_values| %>
            <div class = "details-card-field">
              <label class="title"><%= field_title %></label>
              <% field_values.each do |value| %>
                <% if value.include? 'link' %>
                  <a class="details-field details-field-value"><%= value.sub!('link:', '') %></a>
                <% else %>
                  <span class="details-field details-field-value"><%= value %></span>
                <% end %>
              <% end %>
            </div>
          <% end %>
