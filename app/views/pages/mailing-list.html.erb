<section class="careers-1">
  <article>
    <h1 class="hero-text">Join our mailing list</h1>
    <h5 class="hero-text">Please enter your details below.</h5>
  </article>
</section>

<section class="generic">
  <article>
    <h1>Thanks for your interest.</h1>
    <p>ZokuVault isn't live yet, but if you are interested in receiving access to our beta program please provide your information below, and we will consider you in an upcoming release.</p>

    <%= form_for :interested_user, url: '/mailing-list' do |f| %>
      <% if @interested_user && @interested_user.errors %>
        <div id="error_explanation">
          <h2><%= pluralize(@interested_user.errors.count, "error") %> prohibited this from being sent:</h2>
          <ul>
            <% @interested_user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <label>Name <span class="required">(Required)</span></label>
      <%= f.text_field :name %>

      <label>Email <span class="required">(Required)</span></label>
      <%= f.text_field :email %>

      <label type="phone">Phone Number</label>
      <%= f.text_field :phone_number, class: "form-control", :data => {:mask => '999-999-9999'} %>

      <%= f.label :message %>
      <%= f.text_area :message %>
      <%= f.button "Submit", class: 'primary-button big-button' %>
    <% end %>
  </article>
</section>
