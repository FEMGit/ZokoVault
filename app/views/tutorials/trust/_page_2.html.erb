<div class="card mb-30 mt-20 max-w-1000-centered">
  <h1 class="mb-20">Add your Entity</h1>

  <%- @entity = Entity.new(user: resource_owner, category: Category.fetch(Rails.application.config.x.TrustsEntitiesCategory.downcase)) %>

  <%= form_for @entity, url: url_for(action: :create, controller: :entities) do |f| %>
    <%= hidden_field_tag :next_page_number, @next_page %>
    <%= hidden_field_tag :page_number, @page_number %>

    <%= label_tag "trust_name", 'Entity Name' %>
    <%= render partial: 'tutorials/trust/entities' %>

    <div class="collect-fields">
      <%= hidden_field_tag :tutorial_name, @tutorial_name %>
      <%= hidden_field_tag :next_tutorial, @next_tutorial.try(:name).try(:parameterize) || 'confirmation_page' %>
      <div class="input-pair tutorial-fields entity-fields">
        <%= text_field_tag "entity[name]", "", class: "form-control medium repeated-field", placeholder: 'Entity Name', :maxlength => get_max_length(:wtl_name) %>
        <a class="medium-button button primary-button inline-button add-another-btn">Add Another</a>
      </div>
    </div>

    <%= render partial: 'tutorials/buttons_section', locals: { f: f } %>
  <% end %>
</div>
