<%- investments = current_user.financial_investments %>
<%- investments.each do |inv| %>
  <div class="collect-fields">
    <%= hidden_field_tag :tutorial_name, @tutorial_name, class: 'saved-field' %>
    <div class="input-pair wide tutorial-fields investment-fields">
      <%= text_field_tag "financial_investment[name]", inv.name, class: "saved-field form-control medium", placeholder: 'Investment or Debt Name', :maxlength => get_max_length(:default) %>
      <div class="styled-select form-control medium repeated-field ml-15 h-34">
        <%= select_tag "financial_investment[investment_type]", options_for_select(FinancialInvestment::investment_types.keys, inv.investment_type) %>
      </div>
      <a data-id=<%= inv.id %> class="medium-button outline-button inline-button remove-btn">Remove</a>
    </div>
  </div>
<% end %>
