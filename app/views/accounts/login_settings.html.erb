<%= form_tag :account_login_settings, { method: :put, id: 'account-form' } do %>
  <div class="settings-card">
    <div class="modal-header">
      <h2>Login Settings</h2>
      <p>Please choose how often would you like us to verify your identity via two-factor authentication for future logins.</p>
    </div>

    <div class="modal-content">

      <ul class="radio-list">
       <li class="radio-list">
         <label for="f-option">
         <%= radio_button_tag "user[user_profile_attributes][mfa_frequency]", "always", !current_user.setup_complete ||
                                                                                      current_user.user_profile.mfa_always?, id: 'f-option' %>
         Verify using my phone every time. <span class="recommended">(recommended)</span></label>
         <div class="check"></div>
       </li>

       <li class="radio-list">
         <label for="s-option">
         <%= radio_button_tag "user[user_profile_attributes][mfa_frequency]", "new_ip", current_user.user_profile.mfa_new_ip?, id: 's-option' %>
         Verify using my phone when logging in from a new device.</label>
         <div class="check"></div>
       </li>

       <li class="radio-list">
         <label for="t-option">
         <%= radio_button_tag "user[user_profile_attributes][mfa_frequency]", "never", current_user.user_profile.mfa_never?, id: 't-option' %>
         Do not use my phone for login.</label>
         <div class="check"></div>
       </li>
      </ul>
    </div>
  
    <footer>
      <%= link_to('Next', 'javascript:void(0);', :class=>"button primary-button big-button", :id=>"terms-accepted", onclick: 'submitAccount(event)') %>
    </footer>
  </div>
<% end %>

<script>
  var submitAccount = function(){
    var accountForm = document.getElementById("account-form");
    accountForm.submit();
  }
</script>