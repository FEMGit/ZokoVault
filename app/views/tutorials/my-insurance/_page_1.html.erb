<% category_empty ||= false %>
<% next_tutorial_path ||= nil %>

<% @insurance_card = FinancialProperty.new(user: resource_owner, category: Category.fetch(Rails.application.config.x.FinancialInformationCategory.downcase)) %>
<% lives = Vendor.for_user(resource_owner).lives %>

<%= render partial: 'tutorials/add_remove_tutorial',
                     locals: { form_controller: :life_and_disabilities,
                               title: 'Add Life Insurance',
                               description: 'Add your insurance provider(s).  You will have the opportunity to add additional details (e.g. policy numbers, beneficiaries, coverage amounts, etc.) later.',
                               form_for_object: @insurance_card,
                               label_tag: { name: 'insurance_provider', value: 'Insurance Provider Name' },
                               partial_path: { resources: lives },
                               text_field_tag: { name: 'life_and_disability[name]', placeholder: 'Insurance Provider Name' },
                               fields_class: 'life-disability-fields',
                               category_empty: category_empty,
                               next_tutorial_path: next_tutorial_path
                             } %>
