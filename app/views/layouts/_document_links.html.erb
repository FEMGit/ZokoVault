<% blank ||= false %>
<% target = blank ? "_blank" : "_self" %>
<% name_only ||= false %>

<% if name_only %>
  <%= document.name %>
<% else %>
  <% if @shared_user.present? %>
    <%= link_to document.name, shared_view_document_path(@shared_user, document), target: target %>
  <% else %>
    <%= link_to document.name, document_path(document), target: target %>
  <% end %>
<% end %>