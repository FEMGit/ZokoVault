{
  "name": "zoku-vault",
  "scripts": {
    "postdeploy":"bundle install && rake db:migrate"
  },
  "env": {
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "FILEPICKER_API_KEY": {
      "required": true
    },
    "FILEPICKER_SECRET": {
      "required": true
    },
    "AWS_USER_SECRET_ACCESS_KEY": {
      "required": true
    },
    "AWS_ACCESS_ROLE_ARN": {
      "required": true
    },
    "AWS_USER_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_REGION": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "DATABASE_URL": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "OTP_SECRET_ENCRYPTION_KEY": {
      "required": true
    },
    "PAPERTRAIL_API_TOKEN": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "S3_BUCKET": {
      "required": true
    },
    "S3_BUCKET_NAME": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "SENDGRID_PASSWORD": {
      "required": true
    },
    "SENDGRID_USERNAME": {
      "required": true
    },
    "TWILIO_ACCOUNT_SID": {
      "required": true
    },
    "TWILIO_AUTH_TOKEN": {
      "required": true
    },
    "TWILIO_PHONE_NUMBER": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1
    },
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "papertrail",
    "heroku-postgresql",
    "sendgrid"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
