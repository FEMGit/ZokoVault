<div class="card mb-30 mt-20 max-w-1000-centered">
  <h1 class="mb-20">Add Your Financial Advisor</h1>

  <div class="modal-content">
  <%= render partial: 'tutorials/contact_tutorial_table', locals: { table_title: 'Your Financial Advisors', 
                                                                    contacts: @financial_advisors, 
                                                                    table_id: 'financial-advisor-table' } %>

  <div class="flash-success-static flash add-contactable static small" style="display: none;">
    You added a contact! Add another one of your Financial Advisors, or click Next.</div>
    <button class="button primary-button big-button" onclick="createFinancialAdvisorContact();">Add Financial Advisor</button>
  </div>

  <%= render partial: 'tutorials/buttons_section' %>
</div>

<%= render partial: 'contacts/ajax_form', style: 'display: none;' %>

<script>
  var createFinancialAdvisorContact = function() {
    window.tableIdToUpdate = '#financial-advisor-table'
    setProfessionalDropdown(['Advisor'])
    setRelationshipDropdown(['Financial Advisor / Broker'])
    displayContactFormModal();
  }
</script>
