<section class="contact-1">
  <article>
    <h1 class="hero-text">Contact Us</h1>
    <h5 class="hero-text">ZokuVault helps families plan, organize, and share the important details of their lives.</h5>
  </article>
</section>

<section class="generic">
  <article>
    <h1>Contact Us</h1>
    <p>Let us know how we can help you.  You can email us directly at <a href="mailto:support@zokuvault.com">support@zokuvault.com</a> or fill out the form below. A member of our team will get back to you shortly.</p>

    <%= form_for :user_message, url: '/contact-us' do |f| %>
      <% if @message && @message.errors %>
        <div id="error_explanation">
          <h2><%= pluralize(@message.errors.count, "error") %> prohibited this from being sent:</h2>

          <ul>
            <% @message.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <label>Name<span>required</span></label>
      <%= f.text_field :name %>

      <label>Email<span>required</span></label>
      <%= f.text_field :email %>

      <label>Phone Number<span>optional</span></label>
      <%= f.text_field :phone_number, class: "form-control", :data => {:mask => '999-999-9999'} %>

      <%= f.label :message_content, 'Message' %>
      <%= f.text_area :message_content %>
      <%= f.button 'Submit', class: "primary-button big-button" %>
    <% end %>

  </article>
</section>
