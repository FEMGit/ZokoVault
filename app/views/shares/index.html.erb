<p id="notice"><%= notice %></p>

<h1>Shares</h1>

<table>
  <thead>
    <tr>
      <th>Contact</th>
      <th>Document</th>
      <th>Permission</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @shares.each do |share| %>
      <tr>
        <td>
          <%= share.contact.firstname %>
          <%= share.contact.lastname %>
        </td>
        <td>
          <%= share.document.name %>
        </td>
        <td>
          <%= share.permission %>
        </td>
        <td>
          <button class="outline-button small-button">
            <%= link_to 'Edit', edit_share_path(share) %>
          </button>
          <button class="outline-button small-button">
            <%= link_to 'Destroy', share, method: :delete, data: { confirm: 'Are you sure?' } %>
          </button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Share', new_share_path %>
