<% if category.present? %>
  <% if category.name.eql? Rails.application.config.x.InsuranceCategory %>
    <svg class="icon nav-icon">
      <use xlink:href="#icon-umbrella-1"></use>
    </svg>
  <% elsif category.name.eql? Rails.application.config.x.WillsPoaCategory %>
    <svg class="icon nav-icon">
      <use xlink:href="#icon-document-3"></use>
    </svg>
  <% elsif category.name.eql? Rails.application.config.x.TrustsEntitiesCategory %>
    <svg class="icon nav-icon">
      <use xlink:href="#icon-trust"></use>
    </svg>
  <% elsif category.name.eql? Rails.application.config.x.ContactCategory %>
    <svg class="icon nav-icon">
      <use xlink:href="#icon-share-3"></use>
    </svg>
  <% elsif category.name.eql? Rails.application.config.x.FinancialInformationCategory %>
    <svg class="icon nav-icon">
      <use xlink:href="#icon-activity-monitor-1"></use>
    </svg>
  <% elsif category.name.eql? Rails.application.config.x.TaxCategory %>
    <svg class="icon nav-icon">
      <use xlink:href="#icon-book-6"></use>
    </svg>
  <% elsif category.name.eql? Rails.application.config.x.FinalWishesCategory %>
    <svg class="icon nav-icon">
      <use xlink:href="#icon-bookmark-2"></use>
    </svg>
  <% end %>
<% end %>