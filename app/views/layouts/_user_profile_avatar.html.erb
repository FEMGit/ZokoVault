<% with_name ||= false %>
<% avatar_size ||= 'small' %>
<div class="avatar-wrapper">
  <% if user.photourl.present? %>
    <%= image_tag(get_file_url(user.photourl), class: "avatar-#{avatar_size}", alt: user.initials.to_s) %>
  <% else %>
    <%= image_tag(empty_image, class: "avatar-#{avatar_size}", alt: user.initials.to_s) %>
    <p class="avatar-initials"><%= user.initials %></p>
  <% end %>
</div>
<% if with_name %>
  <span class="avatar-name"><%= user.name %></span>
<% end %>