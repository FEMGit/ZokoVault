<%- entities = Entity.for_user(resource_owner) %>
<%- entities.each do |entity| %>
  <div class="collect-fields">
    <%= hidden_field_tag :tutorial_name, @tutorial_name, class: 'saved-field' %>
    <div class="input-pair tutorial-fields entity-fields">
      <%= text_field_tag "entity[name]", entity.name, class: "saved-field form-control medium", placeholder: 'Entity Name', :maxlength => get_max_length(:wtl_name) %>
      <a data-id=<%= entity.id %> class="medium-button outline-button inline-button remove-btn">Remove</a>
    </div>
  </div>
<% end %>
