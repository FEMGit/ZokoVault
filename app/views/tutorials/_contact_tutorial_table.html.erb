<h3 <% if contacts.blank? %> style="display: none;" <% end %> id='insurance-broker-table-title'><%= table_title %></h3>
<table id=<%= table_id %> class='table-add-contactable' <% if contacts.blank? %> style="display: none;" <% end %>>
  <thead>
    <tr>
      <th>Last Name</th>
      <th>First Name</th>
      <th>Email</th>
      <th>Relationship</th>
    </tr>
  </thead>
  <tbody>
    <% contacts.each do |contact| %>
      <tr>
        <td><%= contact.lastname %></td>
        <td><%= contact.firstname %></td>
        <td><%= contact.emailaddress %></td>
        <td><%= contact.relationship %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script>
  $(document).ready(function(){
      $('#' + '<%= table_id %>').DataTable( {
        paging: false,
        searching: false,
        info: false,
        aaSorting: [[0, 'asc']]
    });
  });
</script>