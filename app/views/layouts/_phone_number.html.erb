<% phone_additional_classes ||= '' %>
<% autofocus ||= false %>
<% if f.present? %>
  <%= f.text_field phone, class: "form-control phone-mask-field " + phone_additional_classes, autofocus: autofocus, type: "tel" %>
<% else %>
  <%= text_field_tag phone, "", class: "form-control phone-mask-field " + phone_additional_classes, autofocus: autofocus, type: "tel" %>
<% end %>

<%= javascript_include_tag 'phone_mask' %>