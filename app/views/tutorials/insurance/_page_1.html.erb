<h1>Add Health Insurance</h1>

<%- @insurance_card = Health.new(user: current_user, category: Category.fetch(Rails.application.config.x.InsuranceCategory.downcase)) %>

<%= form_for(@insurance_card, url: healths_path) do |f| %>
  <%= hidden_field_tag :insurance_step, '1' %>
  <%= hidden_field_tag :tutorial_id, @tutorial_name %>
  <%= hidden_field_tag :page_id, @page_id %>
  <%= hidden_field_tag :next_page_id, @next_page %>
  <%= label_tag "insurance_provider", 'Insurance Provider Name' %>
  <%= text_field_tag "health[name]", "", class: "form-control medium" %>

  <%= f.submit "Next", class: "button big-button primary-button" %>
<% end %>
