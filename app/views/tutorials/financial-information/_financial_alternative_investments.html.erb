<%- alternatives = current_user.financial_alternatives %>
<% providers = FinancialProvider.where(id: alternatives.try(:map, &:manager_id)) %>
<%- providers.each do |pr| %>
  <div class="collect-fields">
    <%= hidden_field_tag :tutorial_name, @tutorial_name, class: 'saved-field' %>
    <div class="input-pair wide tutorial-fields alternative-fields">
      <%= text_field_tag "financial_provider[name]", pr.name, class: "saved-field form-control medium", placeholder: 'Investment Manager Name', :maxlength => get_max_length(:default) %>
      <div class="styled-select form-control medium repeated-field ml-15 h-34">
        <%= select_tag "financial_provider[alternative_0][alternative_type]", options_for_select(FinancialAlternative::alternative_types.keys, pr.alternatives.first.alternative_type) %>
      </div>
      <a data-id=<%= pr.id %> class="medium-button outline-button inline-button remove-btn">Remove</a>
    </div>
  </div>
<% end %>
