<%- valuables = current_user.financial_properties.select{|p| p.property_type == 'Valuable'} %>
<%- valuables.each do |val| %>
  <div class="collect-fields">
    <%= hidden_field_tag :tutorial_name, @tutorial_name, class: 'saved-field' %>
    <%= hidden_field_tag 'financial_property[property_type]', "Valuable", class: 'saved-field' %>
    <div class="input-pair tutorial-fields property-fields">
      <%= text_field_tag "financial_property[name]", val.name, class: "saved-field form-control medium", placeholder: 'Valuable Property', :maxlength => get_max_length(:default) %>
      <a data-id=<%= val.id %> class="medium-button outline-button inline-button remove-btn">Remove</a>
    </div>
  </div>
<% end %>
