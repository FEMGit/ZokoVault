<h1>Taxes</h1>
<section class="flex-boxes">
  <% TaxesLimits::YEARS[:max].downto(TaxesLimits::YEARS[:min]) do |year| %>
    <div class="flex-column">
      <%= render :partial => 'tax_card', :locals => {:year => year} %>
    </div>
  <% end %>
</section>

<h3>Tax Documents</h3>
<%= link_to new_documents_path(:shared_user_id => @shared_user.present? ? @shared_user.id : "", :category => @category.try(:name)), class: "add-link fr" do %>
  <span class="circle-button">
    <svg class="icon circle-icon">
      <use xlink:href="#icon-plus-1"></use>
    </svg>
  </span>Add Document
<% end %>

<%= render :partial => "layouts/standard_document_table", :locals => {:documents => @documents, :shareable => true} %>

<%= javascript_include_tag 'flex_boxes' %>
<script>
var is_safari = navigator.userAgent.indexOf('Safari') != -1 && navigator.userAgent.indexOf('Chrome') == -1;
if(!is_safari){
  $(function(){
    $('.flex-boxes').masonry({
      columnWidth: '.flex-column',
      gutter: 20,
      percentPosition: true,
      itemSelector: '.flex-column'
    });
  });
}
</script>
