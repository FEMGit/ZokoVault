<!DOCTYPE html>
<html>
  <%= render partial: 'layouts/application_head_tag' %>

  <div>
    <div id="header-wrap">
      <div class="title">
        
        <div class="shared-name-header">
          <span class="bold-title">Shared View:</span>
          <span class="user-name"> <%= @shared_user.name %> </span>
        </div>
        
        <%= link_to "Exit", exit_shares_path,
        class: "button primary-button big-button exit-button" %>
      </div>
    </div>
  </div>
  <% if user_signed_in? %>
    <%= auto_session_timeout_js frequency: 15 %>
    <body class="logged-in">
  <% else %>
    <body class="logged-out">
  <% end %>

  <%= render :partial => 'layouts/svgdefs' %>
  <%= render :partial => 'layouts/alerts' %>
  <% if user_signed_in? %>
    <%= render :partial => 'layouts/shared_view_nav' %>
    <main class="app-nav">

    <% else %>
      <main class="marketing">

  <% end %>
  <%= render :partial => 'layouts/shared_view_header' %>

  <div class="content">
    <%= yield %>
    
    <div class="ie-edge-bottom shared"></div>
  </div>

  <%= render :partial => 'layouts/footer' %>
  </main>
    <%= render partial: 'layouts/layout_javascript_include' %>
  </body>
</html>

<%= javascript_include_tag 'date_picker_check' %>