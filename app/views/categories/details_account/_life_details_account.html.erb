<% life_provider_data = [{'card_title': {policy_type: 'Term Life', policy_holder: 'Bruno Mars'},
          'coverage amout': ['1,500,000'],
          'policy number': ['1894563215412554'],
          'primary beneficiaries': ['Bruna Mars'],
