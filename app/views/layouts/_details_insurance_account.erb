<div>
  <a class="edit-link" href='#'>
    <span class="circle-button">
      <svg class="icon circle-icon">
        <use xlink:href="#icon-pencil-1"></use>
      </svg>
    </span>Edit
  </a>
  <h1><%= params[:name] %></h1>
</div>
<div class="card <%= @group['value'] %> details insurance">
  <div class="details-wrapper">
    <% static_insurance_provider_data = { 'web address': ['link:www.metlife.com'], 
          address: ['1234 Pearl Street', 'Chicago IL, 60506'],
          phone: ['555-231-6754', '555-231-6754 fax'],
          'primary contact': ['John Ponzleford', 'link:j.ponzleford@allstate.com', '555-231-6754']} %>

    <div class="details-card-info details">
      <h2 class="provider-details-title">Insurance Provider Details</h2>
      <% static_insurance_provider_data.each do |field_title, field_values| %>
        <div class = "details-card-field">
          <label class="title"><%= field_title %></label>
          <% field_values.each do |value| %>
            <% if value.include? 'link' %>
              <a class="details-field details-field-value"><%= value.sub!('link:', '') %></a>
            <% else %>
              <span class="details-field details-field-value"><%= value %></span>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="add-document-field details-bottom">
      <svg class="icon add-icon">
        <use xlink:href="#icon-add-1"></use>
      </svg>
      Add Insurance Provider Documents<br>
    </div>
  </div>  
  <div class="field shared-field bt-gray-light bb-gray-light details-bottom">
    <span class="shared-with-block">
      <h2 class="shared-with-title">Shared With</h2>
      <svg class="icon icon-Safe share-with-icon" viewBox="0 0 20 20">
        <use xlink:href="#icon-Safe"></use>
      </svg>
    </span>
    <div class="details-card-info details">
      <div class="details-card-field shared">
        <label class="title">Shared With</label>
        <div class="details-field">
         <span class="user-circle">JF</span>
         <span class="user-circle">EL</span>
         <span class="user-circle">EM</span>
        </div>
      </div>
    </div>
  </div>
</div>

