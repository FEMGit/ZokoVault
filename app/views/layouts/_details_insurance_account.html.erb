<%= link_to "#{@insurance_card.id}/edit", class: "edit-link" do%>
  <span class="circle-button">
    <svg class="icon circle-icon">
      <use xlink:href="#icon-pencil-1"></use>
    </svg>
  </span>Edit
<% end %>
<h1><%= @insurance_card.name %></h1>


<div class="card <%= @insurance_card.group %>">
  <h3 class="card-label">Insurance Provider Details</h3>

  <label>Web Address</label>
  <p>
    <a href="<%= @insurance_card.webaddress %>">
      <%= @insurance_card.webaddress %>
    </a>
  </p>

  <label>Address</label>
  <p><%= @insurance_card.street_address_1 %><br>
     <%= @insurance_card.city %>,
     <%= @insurance_card.state %>
     <%= @insurance_card.zip %>
  </p>

  <label>Phone</label>
  <p><%= @insurance_card.phone %><br>
     <%= @insurance_card.fax %> fax
  </p>

  <% if @insurance_card.contact.present? %>
    <label>Primary Contact</label>
    <p><%= @insurance_card.contact.name %><br>
       <a href="mailto:<%= @insurance_card.contact.emailaddress %>">
         <%= @insurance_card.contact.emailaddress %>
       </a><br>
       <%= @insurance_card.contact.phone %>
    </p>
  <% end %>

  <section class="shared-with">
    <h3 class="card-label shared-label">
      <svg class="icon" viewBox="0 0 20 20">
        <use xlink:href="#icon-Safe"></use>
      </svg> Shared With
    </h3>

    <label>Shared With</label>
    <div>
      <% @insurance_card.shares.each do |share| %>
        <% if share.contact.present? %>
          <%= render partial: "layouts/avatar_circle", locals: { :contact => share.contact } %>
        <% end %>
      <% end %>
    </div>
  </section>

</div>

<%= render yield(:partial_path) %>

<div>
  <a class="add-link fr" href="<%= new_document_path(:category => @insurance_card.category, :group => @grouop_label) %>">
    <span class="circle-button">
      <svg class="icon circle-icon">
        <use xlink:href="#icon-plus-1"></use>
      </svg>
    </span>Add Document
  </a>
  <h3 class="mt-20"><%= params[:name] %> Documents</h3>
</div>

<%= render :partial => "layouts/standard_document_table", :locals => {:documents => @group_documents} %>