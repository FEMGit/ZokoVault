<div class="bread-crumbs">
  <%= render_breadcrumbs :separator => ' > '%>
</div>

<%= link_to "#{taxes_path}/#{@tax.id}/edit", class: "edit-link" do%>
  <span class="circle-button">
    <svg class="icon circle-icon">
      <use xlink:href="#icon-pencil-1"></use>
    </svg>
  </span>Edit
<% end %>
<h1><%= @tax.year %> Tax Details</h1>

<% @tax.taxes.each do |tax| %>
  <div class="card cg-<%= @tax.year %> mb-30">
    <% if !tax_present?(tax) %>
      <label>There is no information about Tax</label>
    <% end %>

    <% if tax.tax_preparer.present? %>
      <label>Tax Preparer</label>
      <p>
        <%= tax.tax_preparer.name %><br>
        <%= mail_to tax.tax_preparer.emailaddress, tax.tax_preparer.emailaddress, class:"link-on-top" %><br>
        <%= tax.tax_preparer.phone %>
      </p>
    <% end %>

    <% if tax.notes.present? %>
      <label>Notes</label>
      <p><%= tax.notes %></p>
    <% end %>

    <% if tax.share_with_contacts.present? %>
      <section class="shared-with">
        <h3 class="card-label shared-label">
          <svg class="icon" viewBox="0 0 20 20">
            <use xlink:href="#icon-Safe"></use>
          </svg>
          Shared With
        </h3>

        <label>Shared With</label><br>
        <% tax.share_with_contacts && tax.share_with_contacts.each do |contact| %>
          <%= render partial: "layouts/avatar_circle", locals: { :contact => contact } %>
        <% end %>
      </section>
    <% end %>
  </div>
<% end %>

<a class="add-link fr" href="<%= new_document_path(:category => @category, :group => @tax.year) %>">
  <span class="circle-button">
    <svg class="icon circle-icon">
      <use xlink:href="#icon-plus-1"></use>
    </svg>
  </span>Add Document
</a>
<h3><%= @tax && @tax.year %> Tax Documents</h3>

<%= render :partial => "layouts/standard_document_table", :locals => {:documents => @documents} %>