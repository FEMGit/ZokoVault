<% contact = Contact.for_user(current_user).find_by(id: contact_id) %>
<% if contact.present? %>
  <p class="inline-block" id="share-contact-message-<%=contact.id%>">
    <%= link_to 'Preview invitation email.', 'javascript:displayEmailPreview(' + contact.try(:id).try(:to_s) + ')' %><br>
    This message is sent to <%= contact.name %> when you Continue.
  </p>
<% end %>
