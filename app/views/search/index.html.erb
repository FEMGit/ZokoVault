<%= form_tag search_path, method: :get do -%>
  <%= text_field_tag :q, params[:q] %>
  <%= submit_tag 'search' %>
<% end %>


<% if params[:q].present? %>
  <%= results_summary %><br />

  Results pages: <%= paginate @paginated_results %>

  <% @paginated_results.each do |resource| %>
    <p>
      <%= link_to resource.attributes.inspect, resource %>
    </p>
  <% end %>
<% end %>
