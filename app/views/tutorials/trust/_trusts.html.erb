<%- trusts = Trust.for_user(resource_owner) %>
<%- trusts.each do |trust| %>
  <div class="collect-fields">
    <%= hidden_field_tag :tutorial_name, @tutorial_name, class: 'saved-field' %>
    <div class="input-pair tutorial-fields trust-fields">
      <%= text_field_tag "vault_entry_0[name]", trust.name, class: "saved-field form-control medium", placeholder: 'Trust Name', :maxlength => get_max_length(:wtl_name) %>
      <a data-id=<%= trust.id %> class="medium-button outline-button inline-button remove-btn">Remove</a>
    </div>
  </div>
<% end %>
