<%- businesses = current_user.financial_investments.select{|p| p.investment_type == 'Private Company Stock'} %>
<%- businesses.each do |bus| %>
  <div class="collect-fields">
    <%= hidden_field_tag :tutorial_name, @tutorial_name, class: 'saved-field' %>
    <%= hidden_field_tag 'financial_investment[investment_type]', "Private Company Stock", class: 'saved-field' %>
    <div class="input-pair tutorial-fields investment-fields">
      <%= text_field_tag "financial_investment[name]", bus.name, class: "saved-field form-control medium", placeholder: 'Business Name', :maxlength => get_max_length(:default) %>
      <a data-id=<%= bus.id %> class="medium-button outline-button inline-button remove-btn">Remove</a>
    </div>
  </div>
<% end %>
