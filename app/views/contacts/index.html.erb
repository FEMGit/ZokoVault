<p id="notice"><%= notice %></p>

<a class="add-link fr" href="/contacts/new">
  <span class="circle-button">
    <svg class="icon circle-icon">
      <use xlink:href="#icon-plus-1"></use>
    </svg>
  </span>Add Contact
</a>


<h1>Contacts and Permissions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Relationship</th>
    <th>Details</th>
  </tr>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td>
          <%= avatar_circle(contact, true) %>
        </td>
        <td><%= contact.emailaddress %></td>
        <td><%= contact.relationship %></td>
        <td class="details-col"><%= link_to 'Details', contact %></td>
      </tr>
    <% end %>
  </tbody>
</table>