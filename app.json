{
  "name": "zoku-vault",
  "scripts": {
    "postdeploy":"bundle install && rake db:migrate && db:seed"
  },
  "env": {
    "LANG": {
      "required": true
    },
    "MAILER_URL": {
      "required": true
    },
    "OTP_SECRET_ENCRYPTION_KEY": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "TWILIO_ACCOUNT_SID": {
      "required": true
    },
    "TWILIO_AUTH_TOKEN": {
      "required": true
    },
    "TWILIO_PHONE_NUMBER": {
      "required": true
    },
    "ZOKU_VAULT_DATABASE_PASSWORD": {
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1
    },
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "papertrail",
    "heroku-postgresql",
    "sendgrid"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
