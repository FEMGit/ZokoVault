<% @entity = Entity.new(user: resource_owner, category: Category.fetch(Rails.application.config.x.TrustsEntitiesCategory.downcase)) %>
<% entities = Entity.for_user(resource_owner) %>

<%= render partial: 'tutorials/add_remove_tutorial', 
                     locals: { form_controller: :entities,
                               title: 'Add Your Entity',
                               form_for_object: @entity,
                               label_tag: { name: 'entity_name', value: 'Entity Name' },
                               partial_path: { resources: entities },
                               text_field_tag: { name: 'entity[name]', placeholder: 'Entity Name', max_length: get_max_length(:wtl_name) },
                               fields_class: 'entity-fields'
                             } %>
