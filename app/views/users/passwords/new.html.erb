<% @title = PageTitle::LOGGED_OUT_MARKETING_PAGES[:send_reset_password_instructions] %>

<section class="card login-card" >
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

    <%= f.label :email %>
    <% if resource.errors && resource.errors.messages[:email].present? %>
      <span class="error-label"> - <%= resource.errors.messages[:email].first %></span>
    <% end %>
    <%= f.email_field :email, autofocus: true, class: ("input-error" if resource.errors && resource.errors.messages[:email].present?) %>
    
    <%= f.button "Send me reset password instructions", class: "big-button primary-button" %>
  <% end %>
  <br>
  <%= render "users/shared/links" %>
</section>
